<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_screen"
    android:background="@color/fullscreen_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.tavares.kaique.teste_ps_recycler.SplashScreenActivity">

    <ImageView
        android:layout_width="@dimen/largura_foto"
        android:layout_height="@dimen/altura_foto"
        android:id="@+id/ivLogo"
        android:src="@drawable/android"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desenvolvido"
        style="@style/desenvolvimento_splash"
        android:id="@+id/tvDev"
        android:textAlignment="center"
        />

</LinearLayout>
