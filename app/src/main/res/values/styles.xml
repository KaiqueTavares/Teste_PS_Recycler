<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Criando temas para a splash Screen-->
    <style name="Fullscreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="desenvolvimento_splash">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--IronMan-->
    <style name="HeaderListaJogos">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/tamanhoLetraHeaderLista</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="descricaoListaJogos">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/marginTopDescricaoLista</item>
        <item name="android:textSize">@dimen/tamanhoLetraDescricaoLista</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
