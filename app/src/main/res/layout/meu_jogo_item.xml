<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvIronMan"
            style="@style/HeaderListaJogos"
            android:text="@string/ironManHeader"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:src="@drawable/iron_man_header"
            android:id="@+id/ivIronMan"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescricaoIronMan"
            style="@style/descricaoListaJogos"
            android:text="@string/descriptionIronMan"/>
    </LinearLayout>


</android.support.v7.widget.CardView>